<%- include('./base/header.ejs') %>

  <div class="container">
    <div class="alert bg-success my-3">
      <h4 class="text-center" style="color: white;">Update Student</h4>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col"></div>
      <div class="col">
        <form action="/update/student/<%=student._id %>" method="post">
          <div>
            <label class="form-label">Roll NO.</label>
            <input type="text" name="rollNo" class="form-control"   value="<%= student.rollNo %>">
          </div>
          <div>
            <label class="form-label">First Name</label>
            <input type="text" name="firstName" class="form-control"  value="<%= student.firstName %>">
          </div>
          <div>
            <label class="form-label">Last Name</label>
            <input type="text" name="lastName" class="form-control" value="<%= student.lastName %>">
          </div>
          <div>
            <label class="form-label">Father's Name</label>
            <input type="text" name="fatherName" class="form-control"  value="<%= student.fatherName %>">
          </div>
          <div>
               <label class="form-label">Addhar Card No</label>
              <input type="text" name="addharCardNo" class="form-control"  value="<%= student.addharCardNo %>">
        </div>
        <div>
          <label class="form-label">Mobile No</label>
         <input type="text" name="mobileNo" class="form-control"  value="<%= student.mobileNo %>">
   </div>
   
   <div>
    <label class="form-label"></label>
     <input type="Submit" value="Update Student" class="btn btn-warning w-100" name="" id="">
   </div>


        </form>
      </div>
      <div class="col"></div>
    </div>
  </div>
  <%- include('./base/footer.ejs') %>